<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="minibanktest" transaction-type="RESOURCE_LOCAL">
		<!-- see https://docs.jboss.org/author/display/AS71/JPA+Reference+Guide -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.app.minibank.minibankref1.jpa.MyEntity1</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/minibank" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
			<!--
				<property name="javax.persistence.jdbc.user" value="user" />
				<property name="javax.persistence.jdbc.password" value="pass" />
				<property name="hibernate.show_sql" value="true"/>
				<property name="hibernate.format_sql" value="true"/>
			-->
		</properties>
	</persistence-unit>


</persistence>